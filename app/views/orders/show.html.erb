<% @order_lines.each do |order_line| %>
  <%= order_line.product.name %>
  <%= order_line.product.price %>
  <%= order_line.total %>

  <%= form_with model: order_line do |form| %>
    <%= form.hidden_field :product_id, value: order_line.product.id %>
    <%= form.label :quantity %>
    <%= form.number_field :quantity, value: order_line.quantity %>
    <%= form.submit "Update" %>
  <% end %>

  <%= button_to "Delete item", order_line_path(order_line), method: :delete %>
<% end %>

<%= current_order.total %>